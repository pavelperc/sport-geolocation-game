<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <RelativeLayout

        android:id="@+id/rlMainScreen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >


        <LinearLayout
            android:id="@+id/mapLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <fragment
                android:id="@+id/map"
                class="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/chatAndHideBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rlChat"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@color/chatBackground"
                android:visibility="visible">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/reyclerview_message_list"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_above="@+id/horizontal_line"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                </android.support.v7.widget.RecyclerView>

                <View
                    android:id="@+id/horizontal_line"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_above="@+id/layout_chatbox"
                    android:background="#dfdfdf"
                    app:layout_constraintBottom_toTopOf="@+id/layout_chatbox"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"/>

                <LinearLayout
                    android:id="@+id/layout_chatbox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentStart="true"
                    android:background="@color/chatBackground"
                    android:orientation="horizontal"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent">

                    <EditText
                        android:id="@+id/etChatBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:hint="Enter message"
                        android:imeOptions="actionSend"
                        android:maxLines="6"
                        android:singleLine="true"/>

                    <Button
                        android:id="@+id/btnChatSend"
                        android:layout_width="64dp"
                        android:layout_height="32dp"
                        android:layout_gravity="bottom"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:gravity="center"
                        android:onClick="btnChatSendClick"
                        android:text="SEND"
                        android:textSize="14dp"/>

                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="2dp"
                android:paddingTop="2dp"
                android:weightSum="1">

                <Button
                    android:id="@+id/btnExpandChat"
                    style="@style/Widget.AppCompat.Button"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_gravity="start"
                    android:layout_weight="0.61"
                    android:background="@drawable/shape_filled_grey_rectangle"
                    android:drawableRight="@drawable/ic_expand_more_black_24dp"
                    android:minHeight="0dp"
                    android:onClick="btnExpandChatClick"
                    android:paddingLeft="10dp"
                    android:text="показ. чат"
                    android:textAlignment="textStart"
                    android:textSize="12sp"
                    />

                <TextView
                    android:id="@+id/tvMissedMsg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/round_circle_filled"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="+11"
                    android:textColor="#FFFFFF"
                    android:visibility="visible"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llRotate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="2dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnTurnLeft"
                    style="@style/Widget.AppCompat.Button.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="btnTurnLeftClick"
                    android:text="left"/>

                <Button
                    android:id="@+id/btnTurnRight"
                    style="@style/Widget.AppCompat.Button.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="btnTurnRightClick"
                    android:text="right"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Switch
                    android:id="@+id/swchGo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1"
                    android:text="GO"/>

                <Switch
                    android:id="@+id/swchSuperSpeed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="super speed"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/mapControls"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/llRotate"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="40dp"
            android:layout_marginRight="16dp"
            android:orientation="vertical"
            app:layout_anchor="@+id/bottom_sheet"
            app:layout_anchorGravity="top|right">

            <LinearLayout
                android:id="@+id/zoom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/btnMyLocation"
                android:layout_alignParentEnd="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="40dp"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btnZoomIn"
                    style="@style/Widget.AppCompat.Button.Small"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:background="@drawable/ic_zoom_in_black_24dp"
                    android:backgroundTint="@android:color/holo_purple"
                    android:onClick="btnZoomInClick"/>

                <Button
                    android:id="@+id/btnZoomOut"
                    style="@style/Widget.AppCompat.Button.Small"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:background="@drawable/ic_zoom_out_black_24dp"
                    android:backgroundTint="@android:color/holo_purple"
                    android:onClick="btnZoomOutClick"/>
            </LinearLayout>

            <Button
                android:id="@+id/btnMyLocation"
                style="@style/Widget.AppCompat.Button.Small"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:background="@drawable/ic_my_location_black_24dp"
                android:backgroundTint="@android:color/holo_purple"
                android:onClick="btnMyLocationClick"/>
        </LinearLayout>

    </RelativeLayout>

    <include
        layout="@layout/bottom_sheet"
        />

</android.support.design.widget.CoordinatorLayout>
